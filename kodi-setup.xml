<?xml version="1.0" encoding="UTF-8"?>
<advancedsettings>
    <videolibrary>
        <importwatchedstate>true</importwatchedstate>
        <importresumepoint>true</importresumepoint>
    </videolibrary>
    
    <musiclibrary>
        <backgroundupdate>true</backgroundupdate>
    </musiclibrary>
    
    <videodatabase>
        <type>mysql</type>
        <host>localhost</host>
        <port>3306</port>
        <user>kodi</user>
        <pass>kodi123</pass>
    </videodatabase>
    
    <musicdatabase>
        <type>mysql</type>
        <host>localhost</host>
        <port>3306</port>
        <user>kodi</user>
        <pass>kodi123</pass>
    </musicdatabase>
    
    <pathsubstitution>
        <substitute>
            <from>/media/movies</from>
            <to>smb://localhost/media/movies</to>
        </substitute>
        <substitute>
            <from>/media/tv-shows</from>
            <to>smb://localhost/media/tv-shows</to>
        </substitute>
        <substitute>
            <from>/media/pictures</from>
            <to>smb://localhost/media/pictures</to>
        </substitute>
        <substitute>
            <from>/media/documents</from>
            <to>smb://localhost/media/documents</to>
        </substitute>
    </pathsubstitution>
</advancedsettings> 
